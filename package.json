{
  "name": "postcss-dima-rtl",
  "version": "0.0.1",
  "description": "PostCSS plugin RTL Pluginhttps://github.com/AdelDima",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-dima-rtl",
    "postcss-plugin",
    "postcss plugin",
    "rtl",
    "ltr",
    "right to left",
    "left to right"
  ],
  "author": "Adel Tahri adel4tahri@gmail.com",
  "license": "MIT",
  "repository": "https://github.com/AdelDima/postcss-dima-rtl",
  "engines": {
    "node": ">=12.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "clean-publish": "^3.4.2",
    "eslint": "^8.0.1",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^29.4.2",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "dependencies": {
    "rtlcss": "^4.0.0"
  },
  "scripts": {
    "test": "jest --coverage && eslint .",
    "build": "babel ./src --out-dir ./lib --ignore '**/__tests__/*'",
    "lint": "eslint ./src",
    "prepare": "npm run lint && npm run build && npm test",
    "start": "jest --watch"
  }
}
