{
  "name": "postcss-dima-rtl",
  "version": "0.0.2",
  "description": "PostCSS plugin RTL Pluginhttps://github.com/AdelDima",
  "main": "./lib/index.js",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-dima-rtl",
    "postcss-plugin",
    "postcss plugin",
    "rtl",
    "ltr",
    "right to left",
    "left to right"
  ],
  "author": "Adel Tahri adel4tahri@gmail.com",
  "license": "MIT",
  "repository": "https://github.com/AdelDima/postcss-dima-rtl",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "rtlcss": "4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^29.4.2",
    "postcss": "8.4.19",
    "postcss-import": "^12.0.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "scripts": {
    "main": "node ./lib/index.js",
    "test": "jest --coverage && eslint .",
    "build": "babel ./src --out-dir ./lib --ignore '**/__tests__/*'",
    "lint": "eslint ./src",
    "prepare": "npm run lint && npm run build && npm test",
    "start": "jest --watch"
  }
}
